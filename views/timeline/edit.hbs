<h3>New Event</h3>
<div id="new-event">
    <form>
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="title">
        </div>
        <div>
            <label for="image">Image</label>
            <input type="text" name="image" id="image" placeholder="image url">
        </div>
        <div>
            <label for="content">Content</label>
            <textarea name="content" id="content"></textarea>
        </div>
        <div>
            <label for="time_start">Time Start</label>
            <input type="datetime-local" name="time_start" id="time_start">
        </div>
        <div>
            <label for="time_end">End Time</label>
            <input type="datetime-local" name="time_end" id="time_end">
        </div>
        <input type="hidden" name="timeline" value="{{timeline._id}}">
        <button>Create</button>
    </form>
</div>
<h3>Event List</h3>
<div id="event-list">
    {{#each events}}
    <form class="event-card">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{this.title}}">
        </div>
        <div>
            <label for="image">Image</label>
            <input type="text" name="image" id="image" value="{{this.image}}">
        </div>
        <div>
            <label for="content">Content</label>
            <textarea name="content" id="content">{{this.content}}</textarea>
        </div>
        <div>
            <label for="time_start">Time Start</label>
            <input type="datetime-local" name="time_start" id="time_start" value="{{this.time_start}}">
        </div>
        <div>
            <label for="time_end">End Time</label>
            <input type="datetime-local" name="time_end" id="time_end" value="{{this.time_end}}">
        </div>
        <input type="hidden" name="timeline" value="{{timeline._id}}">
        <button class="edit">Edit</button>
        <button class="delete">Delete</button>
    </form>
    {{/each}}
</div>