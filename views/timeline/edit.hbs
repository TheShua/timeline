<div class="left-panel">
    <a href="/timeline">Â« Timelines</a>
    <h2>{{timeline.title}}</h2>
    <div id="timeline-edit">
        <form action="/timeline/{{timeline._id}}" method="POST">
            <h3>Edit Timeline</h3>
            <label for="title">Title</label>
            <input id="title" value="{{timeline.title}}" type="text" name="title" placeholder="Bootcamp web dev">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{timeline.description}}</textarea>
            <div class="buttons">
                <button class="save" type="text">Save</button>
                <button class="view" type="text">View</button>
                <button class="delete" type="text">Delete</button>
            </div>
        </form>
    </div>
    <div id="new-event">
        <form>
            <h3>New Event</h3>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="title">
            <label for="image">Image</label>
            <input type="text" name="image" id="image" placeholder="image url">
            <label for="content">Content</label>
            <textarea name="content" id="content"></textarea>
            <h4>Time Start</h4>
            <div class="time">
                <div>
                    <label for="time_start_year">Year</label>
                    <input type="number" name="time_start_year" id="time_start_year">
                </div>
                <div>
                    <label for="time_start_month">Month</label>
                    <input type="number" name="time_start_month" id="time_start_month" min="1" max="12">
                </div>
                <div>
                    <label for="time_start_day">Day</label>
                    <input type="number" name="time_start_day" id="time_start_day" min="1" max="31">
                </div>
                <div>
                    <label for="time_start_hour">Hour (24)</label>
                    <input type="number" name="time_start_hour" id="time_start_hour" min="0" max="23">
                </div>
                <div>
                    <label for="time_start_minute">Minute</label>
                    <input type="number" name="time_start_minute" id="time_start_minute" min="0" max="59">
                </div>
            </div>
            <h4>Time End</h4>
            <div class="time">
                <div>
                    <label for="time_end_year">Year</label>
                    <input type="number" name="time_end_year" id="time_end_year">
                </div>
                <div>
                    <label for="time_end_month">Month</label>
                    <input type="number" name="time_end_month" id="time_end_month" min="1" max="12">
                </div>
                <div>
                    <label for="time_end_day">Day</label>
                    <input type="number" name="time_end_day" id="time_end_day" min="1" max="31">
                </div>
                <div>
                    <label for="time_end_hour">Hour (24)</label>
                    <input type="number" name="time_end_hour" id="time_end_hour" min="0" max="23">
                </div>
                <div>
                    <label for="time_end_minute">Minute</label>
                    <input type="number" name="time_end_minute" id="time_end_minute" min="0" max="59">
                </div>
                <input type="hidden" name="timeline" value="{{timeline._id}}">
            </div>
            <div class="buttons">
                <button>Create</button>
            </div>
        </form>
    </div>
    <div id="event-list">
        <h3>All Events</h3>
        {{#each events}}
        <form class="event-card">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{this.title}}">
            <label for="image">Image</label>
            <input type="text" name="image" id="image" value="{{this.image}}">
            <label for="content">Content</label>
            <textarea name="content" id="content">{{this.content}}</textarea>
            <h4>Time Start</h4>
            <div class="time">
                <div>
                    <label for="time_start_year">Year</label>
                    <input type="number" name="time_start_year" id="time_start_year" value="{{this.time_start.year}}">
                </div>
                <div>
                    <label for="time_start_month">Month</label>
                    <input type="number" name="time_start_month" id="time_start_month" min="1" max="12"
                        value="{{this.time_start.month}}">
                </div>
                <div>
                    <label for="time_start_day">Day</label>
                    <input type="number" name="time_start_day" id="time_start_day" min="1" max="31"
                        value="{{this.time_start.day}}">
                </div>
                <div>
                    <label for="time_start_hour">Hour (24)</label>
                    <input type="number" name="time_start_hour" id="time_start_hour" min="0" max="23"
                        value="{{this.time_start.hour}}">
                </div>
                <div>
                    <label for="time_start_minute">Minute</label>
                    <input type="number" name="time_start_minute" id="time_start_minute" min="0" max="59"
                        value="{{this.time_start.minute}}">
                </div>
            </div>
            <h4>Time End</h4>
            <div class="time">
                <div>
                    <label for="time_end_year">Year</label>
                    <input type="number" name="time_end_year" id="time_end_year" value="{{this.time_end.year}}">
                </div>
                <div>
                    <label for="time_end_month">Month</label>
                    <input type="number" name="time_end_month" id="time_end_month" min="1" max="12"
                        value="{{this.time_end.month}}">
                </div>
                <div>
                    <label for="time_end_day">Day</label>
                    <input type="number" name="time_end_day" id="time_end_day" min="1" max="31"
                        value="{{this.time_end.day}}">
                </div>
                <div>
                    <label for="time_end_hour">Hour (24)</label>
                    <input type="number" name="time_end_hour" id="time_end_hour" min="0" max="23"
                        value="{{this.time_end.hour}}">
                </div>
                <div>
                    <label for="time_end_minute">Minute</label>
                    <input type="number" name="time_end_minute" id="time_end_minute" min="0" max="59"
                        value="{{this.time_end.minute}}">
                </div>
            </div>
            <div class="buttons">
                <button class="edit" data-id={{this._id}}>Save</button>
                <button class="delete" data-id={{this._id}}>Delete</button>
            </div>
        </form>
        {{/each}}
    </div>
</div>