<aside class="left-panel">
    <a href="/timeline">Â« Timelines</a>
    <h2
        style="min-height: 3em; background-image: url('{{timeline.image}}'); background-size: cover; background-position: center center;">
        {{timeline.title}}</h2>
    <div id="timeline-edit">
        <form enctype="multipart/form-data">
            <h3>Edit Timeline</h3>
            <input type="hidden" name="id" value="{{timeline.id}}">
            <div class="element">
                <label class="inline" for="title">Title</label>
                <input id="title" value="{{timeline.title}}" type="text" name="title" placeholder="Bootcamp web dev">
            </div>
            <div class="element">
                <label class="inline" for="image">Image</label>
                <input type="text" name="image" id="image" value="{{this.image}}">
            </div>
            <div class="element">
                <label class="inline" for="scope">Scope</label>
                <select id="scope" name="scope">
                    <option {{#compare timeline.scope "public"}}selected{{/compare}} value="public">Public</option>
                    <option {{#compare timeline.scope "private"}}selected{{/compare}} value="private">Private</option>
                </select>
            </div>
            {{!-- <p>Collaborators</p> --}}
            <div class="element text">
                <label class="inline" for="description">Description</label>
                <textarea id="description" name="description">{{timeline.description}}</textarea>
            </div>

            <div class="buttons">
                <button class="save" type="text">Save</button>
                <button class="view" type="text">
                    <a href="/timeline/{{timeline.id}}">
                        View
                    </a>
                </button>
                <button class="delete" type="text">Delete</button>
            </div>
        </form>
    </div>
    <div id="new-event" class="{{#compare timeline.template "vertical_flat"}}flat{{/compare}}">
        <form>
            <h3>New Event</h3>
            <div class="element">
                <label class="inline" for="title">Title</label>
                <input type="text" name="title" id="title" placeholder="title">
            </div>
            <div class="element">
                <label class="inline" for="image">Image</label>
                <input type="text" name="image" id="image" placeholder="image url">
            </div>
            <div class="element text">
                <label class="inline" for="content">Content</label>
                <textarea name="content" id="content"></textarea>
            </div>
            <div class="element">
                <div class="margin-top color-picker">
                    <label>Color</label>
                    <input type="radio" id="red" name="color" value="red">
                    <label class="color-choice red" for="red"></label>
                    <input type="radio" id="blue" name="color" value="blue">
                    <label class="color-choice blue" for="blue"></label>
                    <input type="radio" id="yellow" name="color" value="yellow">
                    <label class="color-choice yellow" for="yellow"></label>
                    <input type="radio" id="green" name="color" value="green">
                    <label class="color-choice green" for="green"></label>
                </div>
                <input type="checkbox" id="span-or-point">
                <label for="span-or-point" class="margin-top span-option">
                    <p class="edit">Timespan</p>
                </label>
            </div>
            <h4 class="isnt-span">Time</h4>
            <h4 class="is-span">Time Start</h4>
            <div class="time">
                <div>
                    <label for="time_start_year">Year</label>
                    <input type="number" name="time_start_year" id="time_start_year">
                </div>
                <div>
                    <label for="time_start_month">Month</label>
                    <input type="number" name="time_start_month" id="time_start_month" min="1" max="12">
                </div>
                <div>
                    <label for="time_start_day">Day</label>
                    <input type="number" name="time_start_day" id="time_start_day" min="1" max="31">
                </div>
                <div>
                    <label for="time_start_hour">Hour</label>
                    <input type="number" name="time_start_hour" id="time_start_hour" min="0" max="23">
                </div>
                <div>
                    <label for="time_start_minute">Minute</label>
                    <input type="number" name="time_start_minute" id="time_start_minute" min="0" max="59">
                </div>
            </div>
            <h4 class="is-span">Time End</h4>
            <div class="time is-span">
                <div>
                    <label for="time_end_year">Year</label>
                    <input type="number" name="time_end_year" id="time_end_year">
                </div>
                <div>
                    <label for="time_end_month">Month</label>
                    <input type="number" name="time_end_month" id="time_end_month" min="1" max="12">
                </div>
                <div>
                    <label for="time_end_day">Day</label>
                    <input type="number" name="time_end_day" id="time_end_day" min="1" max="31">
                </div>
                <div>
                    <label for="time_end_hour">Hour</label>
                    <input type="number" name="time_end_hour" id="time_end_hour" min="0" max="23">
                </div>
                <div>
                    <label for="time_end_minute">Minute</label>
                    <input type="number" name="time_end_minute" id="time_end_minute" min="0" max="59">
                </div>
                <input type="hidden" name="timeline" value="{{timeline._id}}">
            </div>
            <div class="buttons">
                <button>Create</button>
            </div>
        </form>
    </div>
    <div id="event-list">
        <h3>All Events</h3>
        {{#each events}}
        <form class="event-card">
            <h4>{{this.title}}</h4>
            <input class="event-toggle-checkbox" type="checkbox" id="title-toggle-{{this.id}}">
            <label for="title-toggle-{{this.id}}">
                <p class="edit">Edit</p>
                <p class="close">Close</p>
            </label>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{this.title}}">
            <label for="image">Image</label>
            <input type="text" name="image" id="image" value="{{this.image}}">
            <label for="content">Content</label>
            <textarea name="content" id="content">{{this.content}}</textarea>
            <div class="margin-top color-picker">
                <label>Color</label>
                <input type="radio" {{#compare this.color "red"}}checked{{/compare}} id="red-{{this.id}}" name="color"
                    value="red">
                <label class="color-choice red" for="red-{{this.id}}"></label>
                <input type="radio" {{#compare this.color "blue"}}checked{{/compare}} id="blue-{{this.id}}" name="color"
                    value="blue">
                <label class="color-choice blue" for="blue-{{this.id}}"></label>
                <input type="radio" {{#compare this.color "yellow"}}checked{{/compare}} id="yellow-{{this.id}}"
                    name="color" value="yellow">
                <label class="color-choice yellow" for="yellow-{{this.id}}"></label>
                <input type="radio" {{#compare this.color "green"}}checked{{/compare}} id="green-{{this.id}}"
                    name="color" value="green">
                <label class="color-choice green" for="green-{{this.id}}"></label>
            </div>
            {{#if this.time_end.year}}
            <h4>Time Start</h4>
            {{else}}
            <h4>Time</h4>
            {{/if}}
            <div class="time">
                <div>
                    <label for="time_start_year">Year</label>
                    <input type="number" name="time_start_year" id="time_start_year" value="{{this.time_start.year}}">
                </div>
                <div>
                    <label for="time_start_month">Month</label>
                    <input type="number" name="time_start_month" id="time_start_month" min="1" max="12"
                        value="{{this.time_start.month}}">
                </div>
                <div>
                    <label for="time_start_day">Day</label>
                    <input type="number" name="time_start_day" id="time_start_day" min="1" max="31"
                        value="{{this.time_start.day}}">
                </div>
                <div>
                    <label for="time_start_hour">Hour</label>
                    <input type="number" name="time_start_hour" id="time_start_hour" min="0" max="23"
                        value="{{this.time_start.hour}}">
                </div>
                <div>
                    <label for="time_start_minute">Minute</label>
                    <input type="number" name="time_start_minute" id="time_start_minute" min="0" max="59"
                        value="{{this.time_start.minute}}">
                </div>
            </div>
            {{#if this.time_end.year}}
            <h4>Time End</h4>
            <div class="time">
                <div>
                    <label for="time_end_year">Year</label>
                    <input type="number" name="time_end_year" id="time_end_year" value="{{this.time_end.year}}">
                </div>
                <div>
                    <label for="time_end_month">Month</label>
                    <input type="number" name="time_end_month" id="time_end_month" min="1" max="12"
                        value="{{this.time_end.month}}">
                </div>
                <div>
                    <label for="time_end_day">Day</label>
                    <input type="number" name="time_end_day" id="time_end_day" min="1" max="31"
                        value="{{this.time_end.day}}">
                </div>
                <div>
                    <label for="time_end_hour">Hour</label>
                    <input type="number" name="time_end_hour" id="time_end_hour" min="0" max="23"
                        value="{{this.time_end.hour}}">
                </div>
                <div>
                    <label for="time_end_minute">Minute</label>
                    <input type="number" name="time_end_minute" id="time_end_minute" min="0" max="59"
                        value="{{this.time_end.minute}}">
                </div>
            </div>
            {{/if}}
            <div class="buttons">
                <button class="edit" data-id={{this._id}}>Save</button>
                <button class="delete" data-id={{this._id}}>Delete</button>
            </div>
        </form>
        {{/each}}
    </div>
</aside>

